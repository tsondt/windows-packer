    "iso_url": "iso/en_windows_8_1_pro_vl_x64_dvd_2971948.iso"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "32"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ]
      ],
      "guest_os_type": "Windows81_64",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "communicator": "winrm",
      "winrm_username": "surivuser",
      "winrm_password": "surivHST",
      "winrm_timeout": "15m",
      "guest_additions_mode": "disable",
      "virtualbox_version_file": "",
      "output_directory": "win81x64pro-vbox",
      "keep_registered": "true",
      "floppy_files": [
        "floppy/win7x64pro/Autounattend.xml",
        "floppy/win7x64pro/winrm.ps1",
        "floppy/win7x64pro/config.bat",
        "floppy/win7x64pro/diskcleanup.bat"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "windows-restart"
    },
    {
      "type": "windows-shell",
      "inline": [
        "dism /online /cleanup-image /startcomponentcleanup /resetbase",
        "A:\\diskcleanup.bat",
        "shutdown /s"
      ]
    }
  ]
}
